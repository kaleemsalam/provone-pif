          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                       messageType="tns:bpelAddResponseMessage"/>
        <bpel:variable name="PLCalculatorResponse" messageType="ns:AddResponse"> </bpel:variable>
        <bpel:variable name="PLCalculatorRequest" messageType="ns:Add"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
