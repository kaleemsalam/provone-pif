    <!-- ================================================================= -->
    <bpel:sequence name="main">

        <!-- Receive input from requester. 
             Note: This maps to operation defined in bpelAdd.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                      portType="tns:bpelAdd"
                      operation="process" variable="input"
                      createInstance="yes"/>

        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="AssignInputAdd">
            <bpel:copy>
                <bpel:from>
                    <bpel:literal>
                        <tns:Add xmlns:tns="http://kit.demo/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                            <firstNum>0.0</firstNum>
                            <secondNum>0.0</secondNum>
                        </tns:Add>
                    </bpel:literal>
                </bpel:from>
                <bpel:to variable="PLCalculatorRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                        <![CDATA[tns:input1]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="PLCalculatorRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                        <![CDATA[firstNum]]></bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                        <![CDATA[tns:input2]]></bpel:query>
                </bpel:from>
