                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                        <![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:reply name="replyOutput"
                    partnerLink="client"
                    portType="tns:bpelAdd"
                    operation="process"
                    variable="output"
        />
    </bpel:sequence>
