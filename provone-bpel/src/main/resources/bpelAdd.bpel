                          partnerLinkType="tns:bpelAdd"
                          myRole="bpelAddProvider"
        />
        <bpel:partnerLink name="PLCalculator" partnerLinkType="tns:PLTCalculator"
                          partnerRole="CalculationProvider"></bpel:partnerLink>
    </bpel:partnerLinks>

    <!-- ================================================================= -->
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->
    <bpel:variables>
