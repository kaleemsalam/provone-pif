                 importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="bpelAddArtifacts.wsdl" namespace="http://bpelAdd.kit.edu"
                 importType="http://schemas.xmlsoap.org/wsdl/"/>

